<div class="modal fade" id="modalDetailHeadHistory" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Approval</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="editFormDetailsHead" class="row needs-validation" novalidate>
                    @*<div class="row detailBody">

                        </div>*@
                    <div class="col-md-6">
                        <label for="dayTypeD" class="form-label">Day Type</label>
                        <input type="text" name="dayTypeD" id="dayTypeD" class="form-control" required readonly />
                    </div>
                    <div class="col-md-6">
                        <label for="paymentD" class="form-label">Payment</label>
                        <input type="text" name="paymentD" id="paymentD" class="form-control" required readonly />
                    </div>
                    <div class="col-md-6">
                        <label for="emailD" class="form-label">Email</label>
                        <input type="email" name="emailD" id="emailD" class="form-control" required readonly />
                    </div>
                    <div class="col-md-6">
                        <label for="phoneD" class="form-label">Phone</label>
                        <input type="text" name="phoneD" id="phoneD" class="form-control" required readonly />
                    </div>
                    <div class="col-md-12">
                        <label for="startTimeD" class="form-label">Date</label>
                        <input type="text" name="startTimeD" id="startTimeD" class="form-control" required readonly />
                    </div>
                    <div class="col-md-12">
                        <label for="endTimeD" class="form-label">Time</label>
                        <input type="text" name="endTimeD" id="endTimeD" class="form-control" required readonly />
                    </div>
                    <div class="col-md-12">
                        <label for="overtimeReportD" class="form-label">Overtime Report</label>
                        <input type="text" name="overtimeReportD" id="overtimeReportD" class="form-control" required readonly />
                    </div>
                    <div class="col-md-12">
                        <label for="validationD" class="form-label">Validation Description</label>
                        <input type="text" name="validationD" id="validationD" class="form-control" required readonly />
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>*@

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

