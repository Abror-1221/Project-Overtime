@{
    ViewData["Title"] = "Employee Page";
    Layout = "~/Views/Layout/EmployeeLayout.cshtml";
    var id = ViewData["token"];
    var nik = ViewData["nik"];
}
<div class="card">
    <div class="card-header">
        <h3>Overtime</h3>
    </div>
    <div>
        <p>@nik</p>

        <p> @id</p>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="user">
                <div class="d-grip gap-2 col-2">
                    
                </div>
                <hr />
                <table class="table" id="employeeTableHistory">
                    <thead>
                        <tr>
                            <th>Nomor</th>
                            <th>Date Request</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


<!--Detail-->
<div class="modal fade" id="modalDetailEmpHistory" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabelEmployee">Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/EmployeeHistory.js"></script>
}