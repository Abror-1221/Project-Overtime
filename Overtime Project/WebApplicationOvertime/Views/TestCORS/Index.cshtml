<!--Modal DATA TABLES EDIT-->
<div class="modal fade" id="editModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleInsertModalLabel">Update Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="editForm" class="row needs-validation" novalidate>
                    <div class="col-md-4 ">
                        <label for="nikE" class="form-label">NIK :</label>
                        <input type="text" name="nikE" class="form-control" id="nikE" pattern="[0-9]+" required readonly />
                        <div class="invalid-feedback">
                            Please provide a NIK (only number character)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="firstNameE" class="form-label">First Name :</label>
                        <input type="text" name="firstNameE" id="firstNameE" class="form-control" pattern="[a-zA-Z]+" required />
                        <div class="invalid-feedback">
                            Please provide a first name (only uppercase and lowercase letter)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="lastNameE" class="form-label">Last Name :</label>
                        <input type="text" name="lastNameE" id="lastNameE" class="form-control" pattern="[a-zA-Z]+" required />
                        <div class="invalid-feedback">
                            Please provide a last name (only uppercase and lowercase letter)
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <label for="phoneE" class="form-label">Phone :</label>
                        <input type="text" name="phoneE" id="phoneE" class="form-control" pattern="[0-9]+" required />
                        <div class="invalid-feedback">
                            Please provide a phone number (only number character)
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <label for="birthDateE" class="form-label">Birth Date :</label>
                        <input type="date" name="birthDateE" id="birthDateE" class="form-control" required />
                        <div class="invalid-feedback">
                            Required
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <label for="salaryE" class="form-label">Salary :</label>
                        <input type="number" name="salaryE" id="salaryE" class="form-control" pattern="[0-9]+" required />
                        <div class="invalid-feedback">
                            Required (only number character)
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <label for="emailE" class="form-label">Email :</label>
                        <input type="email" name="emailE" id="emailE" class="form-control" required placeholder="email@example.com" />
                        <div class="invalid-feedback">
                            Required
                        </div>
                    </div>
                    
                    
                    <button type="submit" id="edit" class="btn btn-success">Save changes</button>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>



                </div>
            </div>
        </div>
    </div>
</div>

