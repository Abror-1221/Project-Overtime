<!--Update Request-->
<div class="modal fade" id="editModalEmployeeOvertime" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleInsertModalLabelEmployeeOvertime">Update Request Overtime</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="editFormEmployeeOvertime" class="row needs-validation" novalidate>
                    <div class="col-md-6">
                        <label for="dateE" class="form-label">Date Request</label>
                        <input type="date" class="form-control" id="dateE" required readonly>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="dayE" class="form-label">Day Type</label>
                        <select name="university" id="dayE" class="form-select" required >
                            <option value="">Select Day Type</option>
                            <option value="1">Weekend</option>
                            <option value="2">Weekday</option>
                            <option value="3">National holiday</option>
                        </select>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label for="startTimeE" class="form-label">Start Time</label>
                        <input type="datetime-local" class="form-control" id="startTimeE" required readonly>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label for="endTimeE" class="form-label">End Time</label>
                        <input type="datetime-local" class="form-control" id="endTimeE" required readonly>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <label for="descEmpE" class="form-label">Overtime Report</label>
                        <textarea class="form-control" id="descEmpE" placeholder="Required report description." required></textarea>
                        <div class="invalid-feedback">
                            Please provide a valid report description.
                        </div>
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>*@
                        <input type="submit" id="editEmployeeOvertime" class="btn btn-success" name="Save Changes" value="Save Changes" />
                        @*<input type="submit" value="insert" name="insert" id="insert" class="btn btn-success" />*@

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

