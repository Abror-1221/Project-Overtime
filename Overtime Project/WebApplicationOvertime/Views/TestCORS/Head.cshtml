                    </div>*@
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        @*<input type="submit" value="Rejected" name="Rejected" id="rejected" class="btn btn-danger" />*@
                        @*<input type="submit" value="Validated" name="Validated" id="validated" class="btn btn-success" />*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--Modal DATA TABLES EDIT-->
<div class="modal fade" id="editModalHead" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleInsertModalLabelHead">Approval</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="editFormHead" class="row needs-validation" novalidate>
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="descHeadE" class="form-label">Validation Description</label>
                            <textarea class="form-control" id="descHeadE" required></textarea>
                            <div class="invalid-feedback">
                                Required!
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="statusE" class="form-label">Approval Action</label>
                            <select name="university" id="statusE" class="form-select" required>
                                <option value="">Select Action</option>
                                <option value="2">Validated</option>
                                <option value="3">Rejected</option>
                            </select>
                            <div class="invalid-feedback">
                                Required!
                            </div>
                        </div>
                        <br />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" value="Submit" name="Submit" id="validated" class="btn btn-success" />
                        @*<input type="submit" value="Rejected" name="Rejected" id="rejected" onclick="reject()" class="btn btn-danger" />*@
                        @*<input type="submit" value="Validated" name="Validated" id="validated" onclick="valid()" class="btn btn-success" />*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Head.js"></script>
}